{
  "name": "dr-dep-audit",
  "version": "0.0.1",
  "type": "module",
  "description": "Audit npm dependencies for outdated packages and vulnerabilities with a fast, colorized CLI. Supports config files, GitHub Actions annotations, and CI/CD integration with automatic failure on high/critical issues.",
  "main": "dist/index.js",
  "bin": {
    "dr-dep-audit": "dist/index.js",
    "dep-audit": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "dep-audit.png"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "cli",
    "audit",
    "dependencies",
    "npm",
    "security",
    "outdated",
    "vulnerabilities"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thegreatbey/dr-dep-audit.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs",
    "lint": "eslint ."
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "cli-table3": "^0.6.5",
    "commander": "^10.0.0",
    "cosmiconfig": "^9.0.0",
    "npm-check-updates": "^18.0.2",
    "ora": "^8.2.0",
    "read-pkg": "^5.2.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.33.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/semver-utils": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "semver-utils": "^1.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
